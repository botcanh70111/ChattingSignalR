@model System.Security.Principal.IIdentity
@{
    ViewBag.Title = "Chat Manager";
}

<h2>Chat View</h2>
<div class="row">
    <div class="col-md-4">
        <h2>@Model.Name</h2>
        <div id="user"></div>
    </div>
    <div class="col-md-4">
        <h2>Message</h2>
        <div id="messages"></div>
    </div>
    <div class="col-md-4">
        <textarea id="text" rows="5"></textarea>
        <button class="btn btn-success" id="send">Send</button>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
    <script src="@Url.Content("~/signalr/hubs")"></script>
    <script src="~/Scripts/Chat/app.js"></script>
}